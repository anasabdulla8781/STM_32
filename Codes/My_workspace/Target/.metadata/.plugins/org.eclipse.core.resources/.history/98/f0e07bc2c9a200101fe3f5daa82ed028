/* #############################    INCLUDING HEADER FILES ##########################################*/
#include "stm32_GPIO.h"

/* #############################    INIT CONSTANTS FOR THE REGISTERS ################################*/

const MODE_REG_TYPE MODE_REG_INIT_CONFIG = {.bits = {.MODER0 = 0x01}};


/* #############################    FILLING THE INITIAL CONFIGURATIONS MEMMAP FOR GPIOA (SW)  #######*/

GPIO_TypeDef GPIOA_init_config;                // Step 1: Declare a variable of type GPIO_TypeDef
GPIOA_init_config.MODER = MODE_REG_INIT_CONFIG.all;   // Step 2: Access the field using '.'
