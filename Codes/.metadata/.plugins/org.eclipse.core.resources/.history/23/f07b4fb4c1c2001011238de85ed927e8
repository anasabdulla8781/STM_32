#include <APP_feature.h>
#include <service.h>


void fade_led_program (void)
{
	if ((gpt4_ptr->TIMx_CCR1 <= gpt4_ptr->TIMx_ARR) && ( upcounter ==1 ))
	{
		gpt4_ptr->TIMx_CCR1 ++;
	}
	else if ( gpt4_ptr->TIMx_CCR1 >= 0 )
	{
		upcounter = 0;
		gpt4_ptr->TIMx_CCR1 --;
	}
	else
	{
		upcounter = 1;
	}
}
